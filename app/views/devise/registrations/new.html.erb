<% content_for :header do %>
    <title> Sign up </title>
    <%= stylesheet_link_tag 'signup'%>
<% end %>
<%= content_for :script_link do %>
    <%= javascript_pack_tag 'sign_up', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="container">
    <div class="login__form">
        <h3 class="login__form-title"> Fotobook Signup </h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { class: "login__form-body", id: "signup_form" }) do |f| %>
            <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
                <%# <label for="txt_first_name "> First Name </label> %>
                <%# <input class="form-control" name="txt_first_name" type="text" placeholder="First Name"> %>
            </div>
            <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                <%# <label for="txt_last_name "> Last Name </label> %>
                <%# <input class="form-control" name="txt_last_name" type="text" placeholder="Last Name"> %>
            </div>
            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
                <%= f.label :password, "New Password" %>
                <% if @minimum_password_length  %>
                <%#= @minimum_password_length  %>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
                <%# <label for="txt_password "> New Password </label> %>
                <%# <input class="form-control" name="txt_password" type="text" placeholder="Password"> %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
                <%# <label for="txt_confirm_password "> Password Confirmation </label> %>
                <%# <input class="form-control" name="txt_confirm_password" type="text" placeholder="Password"> %>
            </div>
            <% if resource.errors.any? %>
                <ul class="list-unstyled">
                <% resource.errors.full_messages.each do |message| %>
                    <li class="error"><%= message %></li>
                <% end %>
                </ul>
            <% end %>
            <%= f.submit "Signup", class: "btn login__form-btn" %>
            <%# <button class="btn login__form-btn"> Signup </button> %>
        <% end %>



    </div>
</div>



