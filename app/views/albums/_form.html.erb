<%= form_with(model: album, local: true, class: "edit__form mt-2", id: "form_album") do |form| %>
    <div class="form-row mb-2">
        <div class="col-12 col-md-6">
            <div class="form-group col-md-10 col-12">
                <%= form.label :title %>
                <%= form.text_field :title, class: "form-control", id: "form__edit__title" %>
            </div>
            <div class="form-group col-md-6 col-10 mt-4">
                <label for="form__edit__mode">Sharing mode</label>
                <%= form.select(:mode, [ [:Private, :private_mode], [ :Public, :public_mode]], {}, { class: "form-control", id: "form__edit__mode" } ) %>
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <%= form.label :description %>
            <%= form.text_area :description, class: "form-control", id: "form__edit__description" %>
        </div>
    </div>
    <div class="form-group col-md-3 col-12">
        <div class="form__add__file">
            <%= form.file_field :images, multiple: true %>
            <%= form.hidden_field :images_cache %>
        </div>
    </div>
    <div class="row">
        <% album.images.each do |image| %>
            <div class="col-md-3 col-4">
                <%= image_tag(image.url, class: "form__add__image w-100", alt: "image") %>
            </div>
        <% end %>
    </div>
      <div class="form-group col-md-9 col-12">
          <% if album.errors.any? %>
              <ul>
                  <% album.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
              </ul>
          <% end %>
      </div>
      <div class="form-group col-md-3 col-12 form__edit__button">
          <%= form.submit "Save", class: "btn btn-success" %>
          <% if album.persisted? %>
                  <%= link_to  album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                      <i class="far fa-trash-alt"> Delete </i>
                  <% end %>
          <% end %>
      </div>
     
<% end %>




 




